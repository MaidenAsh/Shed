        <img id="diamonds2" src="images/diamonds2.png";/>
        <img id="diamonds3" src="images/diamonds3.png";/>
        <img id="diamonds4" src="images/diamonds4.png";/>
        <img id="diamonds5" src="images/diamonds5.png";/>
