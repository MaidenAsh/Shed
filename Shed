        <img id="diamonds9" src="images/diamonds9.png";/>
        <img id="diamonds10" src="images/diamonds10.png";/>
        <img id="diamondsJ" src="images/diamondsJ.png";/>
        <img id="diamondsQ" src="images/diamondsQ.png";/>
