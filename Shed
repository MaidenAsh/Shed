<body onload="initGame()">
    <canvas id="shedCanvas" width="800" height="800"></canvas>
    <!--Every card image is inside this div-->
    <div style="display:none;">
        <img id="spades2" src="images/spades2.png";/>
        <img id="spades3" src="images/spades3.png";/>
